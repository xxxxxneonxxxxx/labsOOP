<UserControl
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:model="using:ObjectOrientedPractics.Model"
  x:Class="ObjectOrientedPractics.View.Tabs.ItemsTab"
  Padding="16">

  <Grid
    ColumnDefinitions="2*,3*"
    ColumnSpacing="16"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <!-- Левая колонка -->
    <Grid
      Grid.Column="0"
      RowDefinitions="Auto,*,Auto"
      RowSpacing="8">

      <!-- Заголовок списка -->
      <TextBlock
        Grid.Row="0"
        Text="Items"
        FontSize="18" />

      <!-- Список товаров -->
      <ListBox
        Grid.Row="1"
        x:Name="ItemsList"
        x:FieldModifier="public"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <ListBox.ItemTemplate>
          <DataTemplate x:DataType="model:Item">
            <TextBlock Text="{Binding Name}" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <!-- Кнопки добавления/удаления -->
      <StackPanel
        Grid.Row="2"
        Orientation="Horizontal"
        Spacing="8">
        <Button
          x:Name="AddBtn"
          x:FieldModifier="public"
          Content="Add" />
        <Button
          x:Name="RemoveBtn"
          x:FieldModifier="public"
          Content="Remove" />
      </StackPanel>
    </Grid>

    <!-- Правая колонка -->
    <ScrollViewer
      Grid.Column="1"
      VerticalScrollBarVisibility="Auto"
      HorizontalScrollBarVisibility="Disabled">

      <!-- Основная сетка редактора -->
      <Grid
        RowDefinitions="Auto,Auto,Auto"
        RowSpacing="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <!-- Заголовок редактора -->
        <TextBlock
          Grid.Row="0"
          Text="Editor"
          FontSize="18"
          Margin="0,0,0,8" />

        <!-- Форма редактирования товара -->
        <Grid
          Grid.Row="1"
          ColumnDefinitions="140,*"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnSpacing="8"
          RowSpacing="8"
          HorizontalAlignment="Stretch">

          <!-- Id -->
          <TextBlock Grid.Row="0" Grid.Column="0" Text="Id:" VerticalAlignment="Center" />
          <TextBox   Grid.Row="0" Grid.Column="1" x:Name="IdBox" x:FieldModifier="public"
                     IsReadOnly="True" MinWidth="160" HorizontalAlignment="Left" />

          <!-- Название -->
          <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" VerticalAlignment="Center" />
          <TextBox   Grid.Row="1" Grid.Column="1" x:Name="NameBox" x:FieldModifier="public"
                     HorizontalAlignment="Stretch" />

          <!-- Описание -->
          <TextBlock Grid.Row="2" Grid.Column="0" Text="Info:" VerticalAlignment="Top" />
          <TextBox   Grid.Row="2" Grid.Column="1" x:Name="InfoBox" x:FieldModifier="public"
                     AcceptsReturn="True" MinHeight="100" HorizontalAlignment="Stretch" />

          <!-- Стоимость -->
          <TextBlock Grid.Row="3" Grid.Column="0" Text="Cost:" VerticalAlignment="Center" />
          <TextBox   Grid.Row="3" Grid.Column="1" x:Name="CostBox" x:FieldModifier="public"
                     MinWidth="120" HorizontalAlignment="Left" />

          <!-- Категория -->
          <TextBlock Grid.Row="4" Grid.Column="0" Text="Category:" VerticalAlignment="Center" />
          <ComboBox  Grid.Row="4" Grid.Column="1" x:Name="CategoryBox" x:FieldModifier="public"
                     SelectedIndex="0" HorizontalAlignment="Stretch">
            <ComboBoxItem Content="Electronics" />
            <ComboBoxItem Content="Clothes" />
            <ComboBoxItem Content="Food" />
            <ComboBoxItem Content="Books" />
            <ComboBoxItem Content="Sports" />
            <ComboBoxItem Content="Beauty" />
            <ComboBoxItem Content="Home" />
            <ComboBoxItem Content="Toys" />
          </ComboBox>

          <!-- Сообщения об ошибках -->
          <TextBlock Grid.Row="5" Grid.ColumnSpan="2" x:Name="ErrorText" x:FieldModifier="public"
                     Foreground="Red" />
        </Grid>

        <!-- Кнопка Save -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
          <Button x:Name="SaveBtn" x:FieldModifier="public" Content="Save" />
        </StackPanel>

      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>